<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolbarTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/app_black</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="Text.TitleStyle" parent="android:TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textColor">@color/app_black</item>
    </style>

    <style name="Text.BoldGrayStyle" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="Text.TabStyle" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="Text.LightGrayStyle" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="Text.ButtonStyle" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/pretendard_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>