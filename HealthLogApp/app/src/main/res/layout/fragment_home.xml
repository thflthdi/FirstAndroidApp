<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/main_statistics_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/panel"
            android:orientation="vertical"
            android:padding="15dp"
            tools:context=".HomeActivity">

            <TextView
                android:id="@+id/statistics_title"
                style="@style/Text.TitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="@string/analysis_shift"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/exercise_name"
                style="@style/Text.TitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:text="@string/squat"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/empty_text"
                style="@style/Text.BoldGrayStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:text="@string/analysis_none_data"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_statistics_panel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/panel"
            android:orientation="vertical"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@+id/main_statistics_panel">

            <TextView
                android:id="@+id/exercise_title"
                style="@style/Text.TitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exercise_shift"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/empty_exercise_text"
                style="@style/Text.LightGrayStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="@string/exercise_none_data"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/exercise_button"
                style="@style/Text.ButtonStyle"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/button"
                android:text="@string/exercise_log_btn"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_statistics_panel3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/panel"
            android:orientation="vertical"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@+id/main_statistics_panel2">

            <TextView
                style="@style/Text.TitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/month_calendar"
                android:textSize="18sp" />


            <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mcv_selectionColor="@color/main_color"
                app:mcv_showOtherDates="all" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>

