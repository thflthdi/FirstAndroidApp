<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp"
    app:layout_constraintHeight_max="200dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/panel_gray">

        <TextView
            android:id="@+id/set_exercise_name"
            style="@style/Text.TitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="스쿼트" />

        <TextView
            android:id="@+id/set_total_ctn"
            style="@style/Text.LightGrayStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:text="Total 5 set"
            android:textSize="12sp" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/set_exercise_name"
            android:background="@color/white" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/set_recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:padding="10dp" />

        <Button
            android:id="@+id/set_plus_btn"
            style="@style/Text.ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/set_recycle"
            android:text="+ 세트 추가" />

        <Button
            android:id="@+id/fold_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/set_plus_btn"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@color/panel_gray"
            android:gravity="top|center_horizontal"
            android:padding="0dp"
            android:text="^"
            android:textColor="@color/light_gray"
            android:textSize="19sp" />
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>

