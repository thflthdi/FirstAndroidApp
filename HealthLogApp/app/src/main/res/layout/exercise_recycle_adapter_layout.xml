<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:layout_constraintHeight_max="200dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/panel_gray">

        <TextView
            android:id="@+id/set_exercise_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스쿼트"
            style="@style/Text.TitleStyle" />
        <TextView
            android:id="@+id/set_total_ctn"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text.LightGrayStyle"
            android:textSize="12sp"
            android:text="Total 5 set" />
        <View
            android:id="@+id/line"
            android:layout_below="@+id/set_exercise_name"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/set_recycle"
            android:layout_below="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/set_plus_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+ 세트 추가"
            style="@style/Text.ButtonStyle"
            android:layout_below="@+id/set_recycle"/>
        <Button
            android:id="@+id/fold_btn"
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:backgroundTint="@color/panel_gray"
            android:textColor="@color/light_gray"
            android:textSize="19sp"
            android:text="^"
            android:gravity="top|center_horizontal"
            style="?android:attr/borderlessButtonStyle"
            android:layout_below="@id/set_plus_btn"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>

